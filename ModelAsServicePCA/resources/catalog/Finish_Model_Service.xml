      <pre>
        <script>
          <code language="bash">
            <![CDATA[
INSTANCE_NAME=variables_INSTANCE_NAME
IMAGE_PATH=$(singularity instance list ${INSTANCE_NAME} | awk 'NR>1 {print $3}')
echo "INFO: Deleting data folder: ${DATA_FOLDER_PATH}"
