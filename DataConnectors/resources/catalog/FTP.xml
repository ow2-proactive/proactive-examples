<?xml version="1.0" encoding="UTF-8"?>
<job
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="urn:proactive:jobdescriptor:3.10"
     xsi:schemaLocation="urn:proactive:jobdescriptor:3.10 http://www.activeeon.com/public_content/schemas/proactive/jobdescriptor/3.10/schedulerjob.xsd"
    name="FTP" projectName="1. File"
    priority="normal"
    onTaskError="continueJobExecution"
     maxNumberOfExecution="2">
  <description>
    <![CDATA[ Import or export file(s) from an FTP server ]]>
  </description>
  <genericInformation>
    <info name="bucketName" value="data-connectors"/>
    <info name="pca.action.icon" value="/automation-dashboard/styles/patterns/img/wf-icons/ftp_import.png"/>
    <info name="Documentation" value="doc.activeeon.com/latest/"/>
    <info name="group" value="public-objects"/>
  </genericInformation>
  <taskFlow>
    <task name="ftp-connector">
      <description>
        <![CDATA[ GET files from (or PUT files to) a server using File Transfer Protocol (FTP).
If $EXTRACT_ARCHIVE is True, the imported file will be extracted if it is an archive. ]]>
      </description>
      <variables>
        <variable name="FTP_HOSTNAME" value="localhost" inherited="false" />
        <variable name="FTP_PORT" value="21" inherited="false" />
        <variable name="FTP_MODE" value="GET" inherited="false" model="PA:LIST(GET, PUT)"/>
        <variable name="FTP_LOCAL_FILE_PATH" value="" inherited="false" />
        <variable name="FTP_REMOTE_FILE_PATH" value="" inherited="false" />
        <variable name="FTP_EXTRACT_ARCHIVE" value="False" inherited="false" model="PA:Boolean"/>
      </variables>
      <genericInformation>
        <info name="task.icon" value="/automation-dashboard/styles/patterns/img/wf-icons/ftp_import.png"/>
        <info name="Documentation" value="doc.activeeon.com/latest/"/>
      </genericInformation>
      <inputFiles>
        <files  includes="$FTP_LOCAL_FILE_PATH**" accessMode="transferFromGlobalSpace"/>
        <files  includes="$FTP_LOCAL_FILE_PATH/**" accessMode="transferFromGlobalSpace"/>
      </inputFiles>
      <pre>
        <script>
          <code language="bash">
            <![CDATA[

]]>
          </code>
        </script>
      </pre>
      <javaExecutable class="org.ow2.proactive.scheduler.examples.FTPConnector">
        <parameters>
          <parameter name="ftpHostname" value="$FTP_HOSTNAME"/>
          <parameter name="ftpPort" value="$FTP_PORT"/>
          <parameter name="ftpExtractArchive" value="$FTP_EXTRACT_ARCHIVE"/>
          <parameter name="ftpLocalFilePath" value="$FTP_LOCAL_FILE_PATH"/>
          <parameter name="ftpRemoteFilePath" value="$FTP_REMOTE_FILE_PATH"/>
          <parameter name="ftpMode" value="$FTP_MODE"/>
        </parameters>
      </javaExecutable>
      <outputFiles>
        <files  includes="$FTP_LOCAL_FILE_PATH/**" accessMode="transferToGlobalSpace"/>
        <files  includes="$FTP_LOCAL_FILE_PATH**" accessMode="transferToGlobalSpace"/>
      </outputFiles>
    </task>
  </taskFlow>
</job>