            <inputFiles>
                <files  includes="${LOCAL_BASE}${FILE_PATTERN}" accessMode="transferFromGlobalSpace"/>
            </inputFiles>
            <scriptExecutable>
                <script>
                    <file url="${PA_CATALOG_REST_URL}/buckets/data-connectors/resources/ExportToFileSystem/raw" language="groovy">
