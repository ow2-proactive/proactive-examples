<?xml version="1.0" encoding="UTF-8"?>
<job xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="urn:proactive:jobdescriptor:3.8"
	xsi:schemaLocation="urn:proactive:jobdescriptor:3.8 http://www.activeeon.com/public_content/schemas/proactive/jobdescriptor/3.8/schedulerjob.xsd"
	name="Selection Scripts" projectName="1. Basic Workflows" priority="normal"
	onTaskError="continueJobExecution">
	<description>
    <![CDATA[ A selection script allows you to programmatically select a node to execute a given task.        The script will be executed on nodes and should set the variable 'selected' to true to mark it as        eligible for the task execution. ]]>
  </description>
	<genericInformation>
		<info name="workflow.icon"
			value="/automation-dashboard/styles/patterns/img/wf-icons/selection_scripts.png" />
	</genericInformation>
	<taskFlow>
		<task name="run_only_on_linux">
			<genericInformation>
				<info name="task.icon"
					value="/automation-dashboard/styles/patterns/img/wf-icons/selection_scripts.png" />
			</genericInformation>
			<selection>
				<script>
					<code language="groovy">
            <![CDATA[
import org.ow2.proactive.scripting.helper.selection.SelectionUtils

                        selected = SelectionUtils.checkOSName("linux")
]]>
					</code>
				</script>
			</selection>
			<nativeExecutable>
				<staticCommand value="uname">
					<arguments>
						<argument value="-a" />
					</arguments>
				</staticCommand>
			</nativeExecutable>
		</task>
		<task name="run_only_on_windows">
			<genericInformation>
				<info name="task.icon"
					value="/automation-dashboard/styles/patterns/img/wf-icons/selection_scripts.png" />
			</genericInformation>
			<selection>
				<script>
					<code language="groovy">
            <![CDATA[
import org.ow2.proactive.scripting.helper.selection.SelectionUtils

                        selected = SelectionUtils.checkOSName("windows")
]]>
					</code>
				</script>
			</selection>
			<nativeExecutable>
				<staticCommand value="cmd.exe">
					<arguments>
						<argument value="/c" />
						<argument value="ver" />
					</arguments>
				</staticCommand>
			</nativeExecutable>
		</task>
		<task name="run_only_on_mac">
			<genericInformation>
				<info name="task.icon"
					value="/automation-dashboard/styles/patterns/img/wf-icons/selection_scripts.png" />
			</genericInformation>
			<selection>
				<script>
					<code language="groovy">
            <![CDATA[
import org.ow2.proactive.scripting.helper.selection.SelectionUtils

                        selected = SelectionUtils.checkOSName("mac")
]]>
					</code>
				</script>
			</selection>
			<nativeExecutable>
				<staticCommand value="sw_vers"></staticCommand>
			</nativeExecutable>
		</task>
	</taskFlow>
</job>