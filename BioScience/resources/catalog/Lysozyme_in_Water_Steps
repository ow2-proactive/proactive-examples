Step_ID;Command;Output_Files;Notification;Action

Step_1_strip_out_crystal_waters ; grep -v HOH molecule-1aki.pdb > molecule-1aki-clean.pdb ; molecule-1aki-clean.pdb ; false ; continue

Step_2_generate_topology ; echo 15 | gmx pdb2gmx -f molecule-1aki-clean.pdb -o molecule-1aki-processed.gro -water spce ; molecule-1aki-processed.gro,topol.top,posre.itp ; false ; continue

Step_3_define_unit_cell ; gmx editconf -f  molecule-1aki-processed.gro -o molecule-1aki-newbox.gro -c -d 1.0 -bt cubic ; molecule-1aki-newbox.gro ; false ; continue

Step_4_add_solvent ; gmx solvate -cp molecule-1aki-newbox.gro -cs spc216.gro -o molecule-1aki-solv.gro -p topol.top ; molecule-1aki-solv.gro,topol.top ; false ; continue

Step_5_add_ions_phase_a ; gmx grompp -f ions.mdp -c molecule-1aki-solv.gro -p topol.top -o ions.tpr ; ions.tpr,topol.top ; false ; continue

Step_5_add_ions_phase_b ; echo 13 | gmx genion -s ions.tpr -o molecule-1aki-solv-ions.gro -p topol.top -pname NA -nname CL -neutral ; molecule-1aki-solv-ions.gro,topol.top ; true ; pause

Step_6_energy_minimization_phase_a ; gmx grompp -f minim.mdp -c molecule-1aki-solv-ions.gro -p topol.top -o em.tpr ; em.tpr,topol.top ; false ; continue

Step_6_energy_minimization_phase_b ; gmx mdrun -v -deffnm em && echo 16 0 | gmx energy -f em.edr -o potential.xvg ; em.log,em.edr,em.trr,em.gro,potential.xvg ; true ; pause

Step_6_energy_minimization_phase_c ; gmx mdrun -v -deffnm em && echo 16 0 | gmx energy -f em.edr -o potential-2.xvg ; em.log,em.edr,em.trr,em.gro,potential-2.xvg ; true ; pause

Step_7_equilibration_phase_a ; gmx grompp -f nvt.mdp -c em.gro -r em.gro -p topol.top -o nvt.tpr && gmx mdrun -deffnm nvt && echo 16 0 | gmx energy -f nvt.edr -o temperature.xvg ; nvt.log,nvt.tpr,nvt.gro,nvt.edr,nvt.trr,nvt.cpt,temperature.xvg,topol.top ; false ; continue

Step_7_equilibration_phase_b ; gmx grompp -f npt.mdp -c nvt.gro -r nvt.gro -t nvt.cpt -p topol.top -o npt.tpr && gmx mdrun -deffnm npt && echo 18 0 | gmx energy -f npt.edr -o pressure.xvg && echo 24 0 | gmx energy -f npt.edr -o density.xvg ; npt.log,npt.cpt,npt.trr,npt.gro,npt.edr,npt.tpr,pressure.xvg,density.xvg,topol.top ; false ; continue

Step_8_production_md ; gmx grompp -f md.mdp -c npt.gro -t npt.cpt -p topol.top -o md_0_1.tpr && gmx mdrun -deffnm md_0_1 ; md_0_1.tpr,md_0_1.xtc,topol.top ; true ; pause








