        <info name="task.documentation" value="user/ProActiveUserGuide.html#_file"/>
      </genericInformation>
      <inputFiles>
        <files accessMode="transferFromGlobalSpace" includes="${LOCAL_BASE}${FILE_PATTERN}"/>
      </inputFiles>
