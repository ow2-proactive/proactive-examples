        <script>
          <code language="groovy">
            <![CDATA[
import org.objectweb.proactive.core.util.ProActiveInet

// Get variables
def swarm_instance_name = variables.get("INSTANCE_NAME")
def swarm_manager_listen_ip_port = variables.get("swarm_manager_listen_ip_port")
def swarm_manager_listen_port = swarm_manager_listen_ip_port.split(":")[1]
def swarm_manager_pa_node_name = variables.get("PA_NODE_NAME")

// Get the current IP address
def swarm_manager_ip = ProActiveInet.getInstance().getInetAddress().getHostAddress()

// Start the swarm manager
def cmd = ["docker", "swarm", "init", "--advertise-addr", swarm_manager_ip, "--listen-addr", swarm_manager_listen_ip_port]
println cmd
def swarm_init_output = new StringBuilder()
cmd.execute().waitForProcessOutput(swarm_init_output, System.err)

// Retrieve the swarm token
def swarm_manager_token = swarm_init_output.toString().split("--token ")[1].split(" ")[0]

// Propagate
variables.put( swarm_instance_name, swarm_manager_token)
variables.put("swarm_manager_ip", swarm_manager_ip)
variables.put("swarm_manager_listen_port", swarm_manager_listen_port)
variables.put("swarm_manager_pa_node_name", swarm_manager_pa_node_name)
]]>
          </code>
