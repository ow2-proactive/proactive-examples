// Skip waiting for signal used when executing workflow from workflow tests
if (variables.get("SKIP_SIGNAL") && variables.get("SKIP_SIGNAL").toBoolean()) {
    println("Skipping waiting for signal ...");
    return;
}

def signals = ['Undeploy_Platform','Submit_Connect_To_Hive_Cluster_With_Beeline','Submit_Hive_Read_Hqlfile','Submit_Java_YARN_Pi']

// Manage the signal 'Undeploy_Platform'
signalapi.readyForSignal("Undeploy_Platform")

// Manage the signal 'Submit_Connect_To_Hive_Cluster_With_Beeline'
List <JobVariable> submitConnectToHiveClusterWithBeelineJobVariables = new java.util.ArrayList<JobVariable>()
submitConnectToHiveClusterWithBeelineJobVariables.add(new JobVariable("username", "", "", "HIVE cluster username.", "", false, false))
submitConnectToHiveClusterWithBeelineJobVariables.add(new JobVariable("password", "", "PA:HIDDEN", "HIVE cluster password.", "", false, false))
submitConnectToHiveClusterWithBeelineJobVariables.add(new JobVariable("cluster_ip", "", "PA:NOT_EMPTY_STRING", "HIVE cluster address.", "", false, false))
submitConnectToHiveClusterWithBeelineJobVariables.add(new JobVariable("cluster_port", "", "PA:NOT_EMPTY_STRING", "HIVE cluster port.", "", false, false))
signalapi.readyForSignal("Submit_Connect_To_Hive_Cluster_With_Beeline", submitConnectToHiveClusterWithBeelineJobVariables)

// Manage the signal 'Submit_Hive_Read_Hqlfile'
List <JobVariable> submitHiveReadHqlfileJobVariables = new java.util.ArrayList<JobVariable>()
submitHiveReadHqlfileJobVariables.add(new JobVariable("hql_file_dataspace_relative_path", "", "PA:GLOBAL_FILE", "The hql or sql script relative file path from the global space.", "", false, false))
submitHiveReadHqlfileJobVariables.add(new JobVariable("username", "", "", "HIVE cluster username.", "", false, false))
submitHiveReadHqlfileJobVariables.add(new JobVariable("password", "", "PA:HIDDEN", "HIVE cluster password.", "", false, false))
signalapi.readyForSignal("Submit_Hive_Read_Hqlfile", submitHiveReadHqlfileJobVariables)

// Manage the signal 'Submit_Java_YARN_Pi'
List <JobVariable> submitYarnPiExampleJobVariables = new java.util.ArrayList<JobVariable>()
submitYarnPiExampleJobVariables.add(new JobVariable("nb_maps", "16", "PA:INTEGER", "The number of maps to create.", "", false, false))
submitYarnPiExampleJobVariables.add(new JobVariable("nb_samples", "10000", "PA:INTEGER", "The number of samples to be calculated.", "", false, false))
signalapi.readyForSignal("Submit_Java_YARN_Pi", submitYarnPiExampleJobVariables)


// Receive the signal
receivedSignal = signalapi.waitForAny(signals.toSet())
println(receivedSignal)

signals.each {  signalapi.removeSignal("ready_"+it) }

if (receivedSignal.getName() == "Undeploy_Platform") {
    variables.put("SIGNAL_ACTION","UNDEPLOY_PLATFORM")
    println("Undeploying platform ...")

} else if (receivedSignal.getName() == "Submit_Connect_To_Hive_Cluster_With_Beeline"){
    variables.put("SIGNAL_ACTION","SUBMIT_CONNECT_TO_HIVE_CLUSTER_WITH_BEELINE_JOB")
    variables.put("username",receivedSignal.getUpdatedVariables().get("username"))
    variables.put("password",receivedSignal.getUpdatedVariables().get("password"))
    variables.put("cluster_ip",receivedSignal.getUpdatedVariables().get("cluster_ip"))
    variables.put("cluster_port",receivedSignal.getUpdatedVariables().get("cluster_port"))
    println("Submitting YARN application to the cluster ...")

} else if (receivedSignal.getName() == "Submit_Hive_Read_Hqlfile"){
    variables.put("SIGNAL_ACTION","SUBMIT_HIVE_READ_HQLFILE_JOB")
    variables.put("username",receivedSignal.getUpdatedVariables().get("username"))
    variables.put("password",receivedSignal.getUpdatedVariables().get("password"))
    println("Submitting YARN application to the cluster ...")

} else if (receivedSignal.getName() == "Submit_Java_YARN_Pi"){
    variables.put("SIGNAL_ACTION","SUBMIT_JAVA_YARN_PI_JOB")
    variables.put("nb_maps",receivedSignal.getUpdatedVariables().get("nb_maps"))
    variables.put("nb_samples",receivedSignal.getUpdatedVariables().get("nb_samples"))
    println("Submitting YARN application to the cluster ...")

}
